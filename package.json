{
  "name": "felix-ui",
  "version": "0.2.2",
  "private": false,
  "description": "UI components for Vue.js based on Tailwind CSS ",
  "author": "Dhaval Budhelia <budhelia.dhaval@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 6006",
    "test": "npm run unit",
    "unit": "jest"
  },
  "main": "./dist/felix-ui.umd.js",
  "module": "/dist/felix-ui.es.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/felix-ui.es.js",
      "require": "./dist/felix-ui.umd.js"
    }
  },
  "dependencies": {
    "dayjs": "^1.8.17",
    "vue": "^3.2.26"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@fortawesome/fontawesome-free": "^5.5.0",
    "@storybook/addon-actions": "^6.5.0-alpha.17",
    "@storybook/addon-essentials": "^6.5.0-alpha.17",
    "@storybook/addon-links": "^6.5.0-alpha.17",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/vue3": "^6.5.0-alpha.17",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/component-compiler-utils": "^3.1.2",
    "@vue/test-utils": "^2.0.0-rc.4",
    "autoprefixer": "^10.4.2",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.3",
    "jest": "^26.6.3",
    "postcss": "^8.4.5",
    "storybook-builder-vite": "^0.1.13",
    "tailwindcss": "^3.0.13",
    "vite": "^2.7.12",
    "vue-jest": "^5.0.0-alpha.1",
    "vue-loader": "^16.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "homepage": "https://github.com/dhavalbudhelia/felix-ui",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhavalbudhelia/felix-ui"
  }
}
