{
  "name": "felix-ui",
  "version": "0.2.2",
  "license": "MIT",
  "private": false,
  "description": "UI components for Vue.js based on Tailwind CSS",
  "author": "Dhaval Budhelia <budhelia.dhaval@gmail.com>",
  "homepage": "https://github.com/dhavalbudhelia/felix-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhavalbudhelia/felix-ui"
  },
  "main": "./dist/felix-ui.common.js",
  "module": "/dist/vue.runtime.esm-bundler.js",
  "scripts": {
    "serve": "vue-cli-service serve ./src/index.js",
    "build": "vue-cli-service build ./src/index.js",
    "build-bundle": "vue-cli-service build --target lib --name felix-ui ./src/index.js",
    "test": "npm run unit",
    "unit": "jest",
    "test:watch": "vue-cli-service test:unit --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "core-js": "^3.2.1",
    "dayjs": "^1.8.17",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/helper-define-map": "^7.12.13",
    "@babel/helper-regex": "^7.10.5",
    "@babel/node": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@fortawesome/fontawesome-free": "^5.5.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/vue3": "^6.2.0-alpha.20",
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-service": "^4.2.3",
    "@vue/compiler-sfc": "^3.0.7",
    "@vue/component-compiler-utils": "^3.1.2",
    "@vue/test-utils": "^2.0.0-rc.4",
    "arrify": "^2.0.1",
    "autoprefixer": "^9.8.6",
    "axios": "^0.21.1",
    "babel-jest": "^25.5.1",
    "css-loader": "^3.6.0",
    "jest": "^26.6.3",
    "node-sass": "^4.9.0",
    "postcss": "^8.2.13",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^1.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3",
    "vue-jest": "^5.0.0-alpha.1",
    "vue-loader": "^16.0.0-rc.1",
    "webpack-dev-server": ">=3.1.11"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
